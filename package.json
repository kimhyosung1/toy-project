  "scripts": {
    "build": "nest build",
    "build:swc": "nest build --builder swc",
    "build:all": "nest build gateway && nest build board && nest build notification && nest build scheduler && nest build account && nest build file",
    "build:all:swc": "nest build gateway --builder swc && nest build board --builder swc && nest build notification --builder swc && nest build scheduler --builder swc && nest build account --builder swc && nest build file --builder swc",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --builder swc",
    "start:dev:gateway": "NODE_ENV=dev nest start gateway --watch --debug --builder swc",
    "start:dev:board": "NODE_ENV=dev nest start board --watch --debug --builder swc",
    "start:dev:notification": "NODE_ENV=dev nest start notification --watch --debug --builder swc",
    "start:dev:scheduler": "NODE_ENV=dev nest start scheduler --watch --debug --builder swc",
    "start:dev:account": "NODE_ENV=dev nest start account --watch --debug --builder swc",
    "start:dev:file": "NODE_ENV=dev nest start file --watch --debug --builder swc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:cov": "jest --coverage --config jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config jest.config.js",
    "test:unit": "jest --testPathPattern=unit --config jest.config.js",
    "test:ci": "jest --coverage --ci --watchAll=false --config jest.config.js",
    "test:board": "jest --testPathPattern=apps/board/test --config jest.config.js",
    "test:notification": "jest --testPathPattern=apps/notification/test --config jest.config.js",
    "test:gateway": "jest --testPathPattern=apps/gateway/test --config jest.config.js",
    "test:account": "jest --testPathPattern=apps/account/test --config jest.config.js",
    "test:file": "jest --testPathPattern=apps/file/test --config jest.config.js",
    "test:scheduler": "jest --testPathPattern=apps/scheduler/test --config jest.config.js"
  },
