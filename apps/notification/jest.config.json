{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\.spec\.ts$",
  "transform": {
    "^.+\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>../../libs/$1",
    "^libs/(.*)$": "<rootDir>/../../libs/$1"
  }
}
