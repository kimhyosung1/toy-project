# 개발 환경 설정
NODE_ENV=dev
COMPOSE_PROJECT_NAME=toy-project-dev

# 서비스 포트
GATEWAY_SERVICE_PORT=3000
BOARD_SERVICE_PORT=3001
NOTIFICATION_SERVICE_PORT=3002
TEST2_SERVICE_PORT=3003
SCHEDULER_SERVICE_PORT=3004
ACCOUNT_SERVICE_PORT=3005
FILE_SERVICE_PORT=3006

# 데이터베이스 (로컬)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
# DB_DATABASE=public
DB_DATABASE=item_service
MYSQL_ROOT_PASSWORD=rootpassword

# Redis (로컬)
REDIS_HOST=localhost
REDIS_PORT=6379

# 스케줄러 설정
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Seoul
SCHEDULER_LOG_LEVEL=debug

# Sentry 설정 (에러 모니터링)
SENTRY_DSN_DEV=https://your-dev-dsn@sentry.io/project-id
SENTRY_DSN_PRODUCTION=https://your-prod-dsn@sentry.io/project-id

# Slack 알림 설정
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#scheduler-alerts

# 데이터베이스 동기화 설정
DB_SYNC=false
DB_SCHEMA=public

# JWT 설정
JWT_SECRET=dev-jwt-secret-key-2024-toy-project
JWT_EXPIRES_IN=1h
